# ============================================================================
# AWS Configuration
# ============================================================================

aws_region  = "us-east-1"
environment = "production"

# ============================================================================
# EC2 Configuration
# ============================================================================

# Instance type (FREE TIER: t3.micro or t2.micro)
instance_type = "t3.micro"

# Ubuntu 22.04 LTS AMI for us-east-1
# Find latest: aws ec2 describe-images --owners 099720109477 --filters "Name=name,Values=ubuntu/images/hvm-ssd/ubuntu-jammy-22.04-amd64-server-*" --query 'sort_by(Images, &CreationDate)[-1].[ImageId,CreationDate]' --output table
ami_id = "ami-0c7217cdde317cfec"

# SSH Key pair name (create this in AWS EC2 console first!)
key_name = "my-key-pair"

# SSH allowed IPs (IMPORTANT: Restrict to your IP!)
ssh_allowed_ips = ["0.0.0.0/0"]  # WARNING: Change this to your IP!

# ============================================================================
# Domain & SSL (Optional)
# ============================================================================

domain_name = ""  # Leave empty for now, add later if you have a domain

# ============================================================================
# Monitoring
# ============================================================================

alert_email = "your-email@example.com"

# ============================================================================
# Application Secrets (NEVER commit to git!)
# ============================================================================

redis_secret     = "redis://default:password@host:port"
groq_api_key     = "your-groq-api-key"
google_key       = "your-base64-encoded-google-key"
pinecone_api_key = "your-pinecone-api-key"
mailgun_domain   = "your-mailgun-domain.com"
mailgun_secret   = "your-mailgun-api-key"
